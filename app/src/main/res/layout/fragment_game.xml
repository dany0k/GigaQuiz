<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.navigation.InGame">

    <data>
        <variable
            name="game"
            type="ru.vsu.cs.zmaev.GameFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/questionImage"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_header_height"
                android:layout_marginStart="@dimen/horizontal_margin"
                android:layout_marginTop="@dimen/vertical_margin"
                android:layout_marginEnd="@dimen/horizontal_margin"
                android:layout_marginBottom="@dimen/vertical_margin"
                android:contentDescription="@string/description"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/questionText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/android_category_simple" />

            <TextView
                android:id="@+id/questionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/question_horizontal_margin"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="@dimen/question_horizontal_margin"
                android:fontFamily="sans-serif"
                android:text="@{game.currentQuestion.getText}"
                android:textColor="@color/white"
                android:textSize="@dimen/question_text_size"
                android:textStyle="bold"
                android:typeface="normal"
                app:layout_constraintBottom_toTopOf="@+id/button_first_answer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questionImage"
                tools:text="What color is the Android mascot?" />

            <Button
                android:id="@+id/button_first_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorSecondaryDark"
                android:text="@{game.answers[0]}"
                app:layout_constraintBottom_toTopOf="@+id/button_second_answer"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:text="Green" />

            <Button
                android:id="@+id/button_second_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorSecondaryDark"
                android:text="@{game.answers[1]}"
                app:layout_constraintBottom_toTopOf="@+id/button_third_answer"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:text="Yellow" />

            <Button
                android:id="@+id/button_fourth_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="96dp"
                android:backgroundTint="@color/colorSecondaryDark"
                android:text="@{game.answers[3]}"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="8dp"
                tools:text="Black" />

            <Button
                android:id="@+id/button_third_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorSecondaryDark"
                android:text="@{game.answers[2]}"
                app:layout_constraintBottom_toTopOf="@+id/button_fourth_answer"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:text="White" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>